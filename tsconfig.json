{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "outDir": "./dist/",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "types": ["webpack-env", "jest", "chrome-types"],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.vue",
    "./src/*.ts",
    "./src/*.js",
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
